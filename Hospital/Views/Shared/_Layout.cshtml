<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar { background-color: #2c3e50 !important; }
        .navbar-brand, .nav-link { color: white !important; }
        .nav-link:hover { color: #3498db !important; }
        .card { box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        .card-header { background-color: #3498db !important; }
        .btn-primary { background-color: #3498db; border-color: #3498db; }
        .btn-primary:hover { background-color: #2980b9; border-color: #2980b9; }
        .dashboard-icon { font-size: 2rem; color: #3498db; margin-bottom: 1rem; }
        .user-info { color: #ecf0f1; }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hospital-alt me-2"></i>Hospital System
                </a>
                @if (Context.Session.GetString("UserType") != null)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            @if (Context.Session.GetString("UserType") == "Doctor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="DoctorDashboard">
                                        <i class="fas fa-columns me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="MyPatients">
                                        <i class="fas fa-users me-1"></i>My Patients
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="PatientDashboard">
                                        <i class="fas fa-columns me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="FindDoctor">
                                        <i class="fas fa-user-md me-1"></i>Find Doctor
                                    </a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-3">
            &copy; 2024 - Hospital System - All rights reserved
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
